%h1 Sign Up

=form_for @user do |f|
  .error_messages
    - if @user.errors.any?
      %h2 Form is invalid
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :email
    = f.email_field :email
  
  .field
    = f.label :password
    = f.password_field :password

  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  .actions
    = f.submit 
